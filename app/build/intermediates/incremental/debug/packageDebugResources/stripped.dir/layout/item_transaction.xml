<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- Divider line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutlineVariant" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:gravity="center_vertical">

    <!-- İşlem Tipi Icon -->
        <ImageView
            android:id="@+id/imageViewTransactionType"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="-5dp"
            android:src="@drawable/ic_inventory_24"
            app:tint="?attr/colorPrimary"
            tools:src="@drawable/ic_qr_code_scanner_24" />

        <!-- Marka -->
    <TextView
        android:id="@+id/textViewBrand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Samsung"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="-30dp"
        tools:text="Samsung" />

    <!-- Ürün Tipi -->
    <TextView
        android:id="@+id/textViewProductType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="Çerçeve"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Çerçeve" />

    <!-- İşlem Tipi -->
    <TextView
        android:id="@+id/textViewTransactionTypeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="Satış"

        android:textSize="12sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Satış" />

    <!-- Kasa (Fiyat) -->
    <TextView
        android:id="@+id/textViewAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="₺125.50"
        android:layout_marginStart="-40dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:gravity="end"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="₺125.50" />

    </LinearLayout>

</LinearLayout>